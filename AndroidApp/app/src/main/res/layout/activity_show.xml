<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ShowActivity"
    android:orientation="vertical"
    android:background="#82B9B2"
    android:gravity="center_vertical">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="NITT site"
        android:id="@+id/btnSite"
        android:layout_gravity="center_horizontal"
        android:onClick="goBrowser"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Call NITT"
        android:id="@+id/btnCall"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="goPhone"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Flower Sell"
        android:id="@+id/btnSell"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="sellFlower"/>

</LinearLayout>

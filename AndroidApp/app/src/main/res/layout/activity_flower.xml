<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="vn.nitt.showapp.FlowerActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtFlower"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buy_flower"
        android:id="@+id/btnBuy"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/edtFlower"
        android:layout_alignRight="@+id/edtFlower"
        android:layout_alignEnd="@+id/edtFlower" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Already brought"
        android:id="@+id/brought"
        android:layout_below="@+id/btnBuy"
        android:layout_marginTop="43dp"
        android:layout_alignRight="@+id/btnBuy"
        android:layout_alignEnd="@+id/btnBuy"
        android:background="@color/yellow"/>
</RelativeLayout>
